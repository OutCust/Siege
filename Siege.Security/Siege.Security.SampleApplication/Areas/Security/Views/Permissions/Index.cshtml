@{
    Layout = "~/Areas/Security/Views/Shared/SecurityLayout.cshtml";
    ViewBag.Title = "Security Administration - Permissions";
}

<div id="roles_section">
    
    <div id="roles_list">
        <span id="header">Permissions</span>
        <br/>
        <br/>
        <table id="permissions_grid"></table>
        <table id="permissions_grid_pager"></table>
    </div>
</div>

<script type="text/javascript" language="javascript">
    $(document).ready(function () {
        $("#permissions_grid").jqGrid({
            url: '/Security/Permissions/List/',
            datatype: 'json',
            mtype: 'GET',
            colNames: ['Permission Name', 'Description', 'ID'],
            colModel: [
                { name: 'PermissionName', index: 'RoleName', width: 40, align: 'center' },
                { name: 'Description', index: 'Permissions', width: 40, align: 'center' },
                { name: 'ID', index: 'ID', width: 40, align: 'center', hidden: true}],
            pager: jQuery('#permissions_grid_pager'),
            rowNum: 10,
            rowList: [5, 10, 20, 50],
            sortname: 'Id',
            sortorder: "desc",
            viewrecords: true,
            width: 1000,
            height: 200
        });
    });
</script>
